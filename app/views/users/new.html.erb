<h1>Registreer</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

      <%= f.label "Naam" %>
      <%= f.text_field :first_name %>

      <%= f.label "Achternaam" %>
      <%= f.text_field :last_name %>

      <%= f.label "Email" %>
      <%= f.text_field :email %>

      <%= f.label "Wachtwoord" %>
      <%= f.password_field :password %>

      <%= f.label "Bevestig wachtwoord" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label "Selecteer kwaliteiten" %>
      <%= select_tag(:quality_id, options_for_select(@qualities.collect{ |q| [q.quality, q.id] }), {:multiple => true,  class: 'chosen-quality-select'}) %><br>

      <%= select_tag(:skill_id, options_for_select(@skills.collect{ |s| [s.skill, s.id] }), {:multiple => true, class: 'chosen-quality-select'}) %><br>


      <%= f.submit "Registreren", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>