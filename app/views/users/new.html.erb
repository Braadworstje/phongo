<h1>Registreer</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

      <%= f.label "Naam" %>
      <%= f.text_field :first_name %>

      <%= f.label "Achternaam" %>
      <%= f.text_field :last_name %>

      <%= f.label "Email" %>
      <%= f.text_field :email %>

      <%= f.label "Wachtwoord" %>
      <%= f.password_field :password %>

      <%= f.label "Bevestig wachtwoord" %>
      <%= f.password_field :password_confirmation %>

      <%= f.fields_for :qualities do |q| %>

          <%= q.label :quality %><br>
          <%= q.text_field :quality %><br><br>
          
      <% end %>

      <%= f.fields_for :skills do |sk| %>

      <%= sk.label :skill %><br>
      <%= sk.text_field :skill %><br><br>

      <% end %>


      <%= f.submit "Registreren", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>