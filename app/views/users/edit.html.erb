<h1>Wijzig gegevens</h1>

<div class="row">
  <div class="span6 offset3">

    <%= form_for @user do |f| %>
      <div class = "field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>

      <div class = "field">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>

      <div class = "field">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
      </div>
    <%= f.submit "Registreren", class: "btn btn-large btn-warning" %>




  </div>
</div>