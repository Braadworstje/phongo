<h1>Log in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag sessions_path do %>
      <div>
        <%= label_tag 'email', 'Email' %><br>
        <%= text_field_tag 'email' %>
      </div>

      <div>
        <%= label_tag 'password', 'Password' %><br>
        <%= password_field_tag 'password' %>
      </div>

      <%= submit_tag 'login' %>
    <% end %>
  </div>
</div>


